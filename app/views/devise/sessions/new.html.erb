<div id="homepage-top">
  <h1>Log in</h1>
  <%= image_tag('logoblack.png', style: 'height:95px;width:auto;') %>
</div>

<div id="homepage-middle" style="background-image: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('https://cdn.vox-cdn.com/thumbor/3job2Q0siUze1rXAHq4aXEYdX0M=/339x0:1238x599/1200x800/filters:focal(339x0:1238x599)/cdn.vox-cdn.com/uploads/chorus_image/image/45205974/uber_SafeCities_BlogHeader.0.0.png');">

      <div class="col-xs-12 col-sm-6" style="height: 80vh;">
        <div id="homepage-form">
          <div id="home-form">
            <div id="container-form">
              <div id="getstarted">
                <h3>Log in</h3>

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-inputs">
    <%= f.input :email, required: false, autofocus: true %>
    <%= f.input :password, required: false %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in", id: 'btn-form-homepage' %>
  </div>
<%= render "devise/shared/links" %>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<% end %>

