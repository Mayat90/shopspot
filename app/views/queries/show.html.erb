<%= render 'shared/navbar' %>
<div id="showcontent">
  <div id="showleft">
    <div id=showsearch>
      <%= render 'shared/show_search' %>
    </div>

    <div id="showmapframe" style="background-image: url('<%= static_map_for(@query) %>'); background-size: cover;">
    </div>
  </div>
  <div id="showcard">
    <%= render 'shared/show_card' %>
  </div>
  <div id="showright">
    <div id="linksframe">
      <div id="linkscontent">
        <div id="linkstitle">
          <h3>Want more ?</h3>
        </div>

        <%= link_to 'Cities analytics', query_cities_path(@query), target: :_blank, class: 'btn btn-primary', id:'btn-show' %>
        <%= link_to 'View competition', query_competitors_path(@query), target: :_blank, class: 'btn btn-primary', id:'btn-show' %>

      </div>
    </div>
    <div id="showstreetframe" style="background-image: url('<%= street_view(@query) %>'); background-size: cover;">
    </div>
  </div>
</div>
