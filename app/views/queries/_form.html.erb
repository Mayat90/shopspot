<%= simple_form_for(@query, :method => :post, :url => queries_path ) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :address, label: 'Address' %>
    <%= f.input :activity, label: 'Activity', placeholder: 'Enter the business' %>
    <%= f.input :radius_search, label: 'Radius search in meters', placeholder: '1000'%>
    <%= f.input :radius_catchment_area, label: 'Catchment in meters', placeholder: '200' %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Go!" %>
  </div>

  <%= content_for(:after_js) do %>
  <script src="https://maps.googleapis.com/maps/api/js?libraries=places&amp;key=AIzaSyDvsCOEZHqj_OgjPLBUXCR_rLS5PpNRI58"></script>
<% end %>

<% end %>
