<%= simple_form_for(@query, :method => :post, :url => queries_path ) do |f| %>
  <%= f.error_notification %>

    <%= f.input_field :address, label: 'Address', value: "1 charlemagne, lyon", id: 'form3' %>
    <%= f.input_field :activity, label: 'Activity', class: "form-control", placeholder: 'Enter the business',id: 'form2', value: "boulangerie" %>
    <%= f.input_field :radius_search, class: 'form-control', label: 'Radius search in meters', placeholder: '1000', id: 'form32', value: "1000" %>
    <%= f.input_field :radius_catchment_area, class: "form-control", label: 'Catchment in meters', placeholder: '200', id: 'form8', value: "500" %>
