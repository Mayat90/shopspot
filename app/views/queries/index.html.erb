<p id="notice"><%= notice %></p>

<h1>Queries</h1>

<table>
  <thead>
    <tr>
      <th>Address</th>
      <th>Activity</th>
      <th>Radius search</th>
      <th>Radius catchment area</th>
      <th>Latitude</th>
      <th>Longitude</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @queries.each do |query| %>
      <tr>
        <td><%= query.address %></td>
        <td><%= query.activity %></td>
        <td><%= query.radius_search %></td>
        <td><%= query.radius_catchment_area %></td>
        <td><%= query.latitude %></td>
        <td><%= query.longitude %></td>
        <td><%= link_to 'Show', query %></td>
        <td><%= link_to 'Edit', edit_query_path(query) %></td>
        <td><%= link_to 'Destroy', query, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

